{
  "version": 1,
  "targetDefaults": {
    "build": {
      "cache": true,
      "inputs": ["default", "^default"]
    },
    "test": {
      "cache": true,
      "inputs": ["default", "^default"]
    }
  },
  "plugins": [
    {
      "plugin": "@forge/package-json"
    },
    {
      "plugin": "@forge/maven",
      "options": {
        "buildTargetName": "maven-build",
        "testTargetName": "maven-test",
        "packageTargetName": "maven-package"
      }
    },
    {
      "plugin": "@forge/docker",
      "options": {
        "buildTargetName": "container-build",
        "runTargetName": "container-run",
        "pushTargetName": "container-push"
      }
    }
  ]
}